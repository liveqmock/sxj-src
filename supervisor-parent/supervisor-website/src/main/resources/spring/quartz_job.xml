<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

     <!-- 启动触发器的配置开始 -->
    <bean name="startQuertz" lazy-init="false" 
        class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <!--  <ref bean="crontestJobTrigger" />  -->
                 <ref bean="alJobTrigger" />      <!-- 铝采集 -->
                 <ref bean="windDoorJobTrigger" />   <!-- 门窗采集 -->
            </list>
        </property>
    </bean>
    <!-- 启动触发器的配置结束 -->


    <!-- 调度的配置开始 -->
    <bean id="crontestJobTrigger" class=" org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail">
            <ref bean="myJobDetail" />
        </property>
        <property name="cronExpression">
            <value>0/1 * * * * ?</value>
        </property>
    </bean>
    <bean id="alJobTrigger" class=" org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail">
            <ref bean="alJob" />
        </property>
        <property name="cronExpression">
            <value>0 21 17 * * ?</value>
        </property>
    </bean> 
     <bean id="windDoorJobTrigger" class=" org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail">
            <ref bean="windDoorJob" />
        </property>
        <property name="cronExpression">
            <value>30 16 19 * * ?</value>
        </property>
    </bean> 
    <!-- 调度的配置结束 -->
    <!-- job的配置开始 -->
    <bean id="myJobDetail"
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="test2" />
        </property>
        <property name="targetMethod">
            <value>work</value>
        </property>
    </bean>
     <bean id="alJob"
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="al" />
        </property>
        <property name="targetMethod">
            <value>gather</value>
        </property>
    </bean> 
     <bean id="windDoorJob"
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <ref bean="windDoor" />
        </property>
        <property name="targetMethod">
            <value>gather</value>
        </property>
    </bean> 
    <!-- job的配置结束 -->
     <!-- 工作的bean -->
    <bean id="test2" class="com.sxj.supervisor.website.quartz.Test2" />
    <bean id="al" class="com.sxj.supervisor.website.quartz.AlGatherQuartz" /> 
    <bean id="windDoor" class="com.sxj.supervisor.website.quartz.WindDoorQuartz" /> 

</beans>  